<h1>My Albums</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Artist</th>
    <th>Released</th>
    <th>Value</th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <tr>
    <td><%= album.title %></td>
    <td><%= album.artist %></td>
    <td><%= album.released %></td>
    <td><%= album.value %></td>
    <td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
  </tr>
<% end %>
</table>

